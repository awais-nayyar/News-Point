<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    android:foreground="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/placeholder_vertical"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="2dp"
            android:textColor="#212121"
            android:text="سوئی سدرن گیس کمپنی نے 2 ہزار ملازمین کو فارغ کردیاساحل پر پھنسے جہاز کو نکالنے کے لیے ایک ملین ڈالر کے تقاضے پر مالک نے ناتجربہ کار کمپنی کو ہائر کیا"
            android:layout_toStartOf="@+id/ivNews"
            android:maxLines="2"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tvNewsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="2dp"
            android:text="سوئی سدرن گیس کمپنی نے 2 ہزار ملازمین کو فارغ کردیاساحل پر پھنسے جہاز کو نکالنے کے لیے ایک ملین ڈالر کے تقاضے پر مالک نے ناتجربہ کار کمپنی کو ہائر کیا"
            android:layout_toStartOf="@+id/ivNews"
            android:maxLines="3"
            android:layout_below="@+id/tvNewsTitle"
            android:ellipsize="end"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>